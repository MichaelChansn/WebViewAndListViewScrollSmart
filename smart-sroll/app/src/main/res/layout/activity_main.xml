<?xml version="1.0" encoding="utf-8"?>


<com.ks.library.smartscroll.view.SmartScrollLayout xmlns:android="http://schemas.android.com/apk/res/android"
                             android:id="@+id/wl"
                             android:layout_width="match_parent"
                             android:scrollbars="vertical"
                             android:overScrollMode="always"
                             android:fadeScrollbars="true"
                             android:layout_height="match_parent">

    <com.ks.library.smartscroll.view.ScrollWebView
          android:id="@+id/webview"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:overScrollMode="never"
          android:scrollbars="none"/>
    <com.ks.library.smartscroll.view.ScrollListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:overScrollMode="never">
    </com.ks.library.smartscroll.view.ScrollListView>

</com.ks.library.smartscroll.view.SmartScrollLayout>
